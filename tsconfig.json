{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "router/*": ["./router/*"],
      "logger": ["./logger.ts"],
      "chain/*": ["./chain/*"],
      "db/*": ["./db/*"]
    }
  },

  "include": ["./src"],
  "exclude": [
    "node_modules",
    "./dist",
    "./log"]
}
